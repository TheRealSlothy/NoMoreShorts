{
  "manifest_version": 3,
  "name": "NoMoreShorts",
  "version": "4.20",
  "description": "Removes Youtube Shorts",
  "permissions": ["storage", "scripting", "tabs", "activeTab"],

  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["*://www.youtube.com/*"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Part of Slothy's Better Youtube"
  }
}
